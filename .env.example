# Environment Configuration for Rust Clinic API
# Copy this file to .env and fill in your actual values

# Environment Mode
ENV=DEV

# API Configuration
API_PORT=:8002
BASE_URL=http://localhost:8002
API_URL=http://localhost:8002
PRINT_URL=http://localhost:8003
NHSO_URL=https://nhso.example.com
TELEMED_URL=https://telemed.example.com

# Timezone
TZ=Asia/Bangkok

# Database Configuration - Main Database (Write)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PWD=password
DB_NAME=clinic

# Database Configuration - Main Database (Read Replica)
DBR_HOST=localhost
DBR_PORT=3306
DBR_USER=root
DBR_PWD=password
DBR_NAME=clinic

# Database Configuration - Log Database (Write)
DBL_HOST=localhost
DBL_PORT=3306
DBL_USER=root
DBL_PWD=password
DBL_NAME=clinic_logs

# Database Configuration - Log Database (Read Replica)
DBLR_HOST=localhost
DBLR_PORT=3306
DBLR_USER=root
DBLR_PWD=password
DBLR_NAME=clinic_logs

# JWT Configuration
JWT_AC_KEY=your_access_token_secret_key_here
JWT_RF_KEY=your_refresh_token_secret_key_here
JWT_AC_EXPIRE=90
JWT_RF_EXPIRE=720

# Public API Keys
TK_PUBLIC_KEY=your_public_api_key_here
TK_TELE_PUBLIC_KEY=your_telemedicine_api_key_here

# AWS Configuration
AWS_BUCKET=your-s3-bucket-name
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SMS Configuration (Thai Bulk SMS)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET_KEY=your_sms_secret_key
SMS_SENDER=APSTH

# Email Configuration
EMAIL_NAME=noreply@example.com
EMAIL_PWD=your_email_password

# Upload Configuration
UPLOAD_DIR=uploads/images
EXCEL_UPLOAD_DIR=uploads/excels

# Logging Level (trace, debug, info, warn, error)
RUST_LOG=clinic_api=debug,tower_http=debug,axum=debug
